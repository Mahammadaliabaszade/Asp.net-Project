@model HomeVm;
@{
    ViewData["Title"] = "Index";
}
<main>

    <!-- SLIDER START -->

    <section id="slider">
        <div class="owl-carousel slider">
            @foreach (Slider slide in Model.Sliders)
            {
                <div> <img src="~/img/@slide.Image" alt=""> </div>
            }


        </div>
        <div class="container context pl-lg-5 ml-lg-3">
            <div class="row">
                <div class="col-lg-5">
                    <div class="text">
                        @Html.Raw(Model.FlowerMainText.Title)
                        <p class="text-black-50 d-none d-sm-block">
                           @Model.FlowerMainText.Description
                        </p>
                    </div>
                    <div class="img">
                        <img src="~/img/@Model.FlowerMainText.Image" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SLIDER END -->
    <!-- PRODUCTS START -->

    <section id="products">
        <div class="container">
            <div class="row pt-5">
                <div class="col-12 d-flex justify-content-between">
                    <ul class="category-mobile d-md-none list-unstyled">
                        <li>
                            <a href="" class="categories mr-2">Categories</a>
                            <i class="fas fa-caret-down"></i>
                            <ul class="category list-unstyled" style="display: none;">
                                <li><a href="" data-id="all">All</a></li>
                                @foreach (Category category in Model.Categories)
                                {
                                    <li><a asp-controller="Category" asp-action="Index" asp-route-id="@category.Id" data-id="@category.Name.ToLower()">@category.Name</a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                    <ul class="category d-none d-md-flex list-unstyled">
                        <li><a href="" data-id="all">All</a></li>
                        @foreach (Category category in Model.Categories)
                        {
                            <li><a asp-controller="Category" asp-action="Index" asp-route-id="@category.Id" data-id="@category.Name.ToLower()">@category.Name</a></li>
                        }
                    </ul>
                    <ul class="list-unstyled">
                        <li>
                            <a href="" class="mr-2">Filter</a>
                            <i class="fas fa-caret-down"></i>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row ">
                @foreach (Product product in Model.Products)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
                            <div class="img">
                                <a href="">
                                    <img src="~/img/@product.Image" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@product.Name</h6>
                            </div>
                            <div class="price">
                                <span class="text-black-50">Add to cart</span>
                                <span class="text-black-50">@product.Price</span>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </section>

    <!-- PRODUCTS END -->
    <!-- ABOUT START -->

    <section id="about">
        <div class="container py-5">
            <div class="row py-5">
                <div class="col-lg-6">
                    <div class="img">
                        <img src="~/img/h3-video-img.jpg" class="img-fluid" alt="">
                        <div class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-play fa-lg"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-text mt-5 mt-lg-0 px-lg-5">
                        @Html.Raw(Model.Banner.Title)
                        @Html.Raw(Model.Banner.Description)
                        <ul class="list-unstyled">
                            <li class="mt-3">
                                <img src="~/img/@Model.Banner.Image" class="mr-2" alt=""> Hand picked just
                                for you.
                            </li>
                            <li class="mt-3">
                                <img src="~/img/@Model.Banner.Image" class="mr-2" alt=""> Unique flower
                                arrangements
                            </li>
                            <li class="mt-3">
                                <img src="~/img/@Model.Banner.Image" class="mr-2" alt=""> Best way to say
                                you care.
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ABOUT END -->
    <!-- EXPERTS START -->

    <section id="experts">
        <div class="container">
            <div class="row py-5">
                <div class="offset-lg-3 col-lg-6">
                    <div class="section-title">
                        <h1>Gul uzre Expert</h1>
                        <p class="text-black-50">
                            Gul cicek kreativlik,gozellik ve sevgidir.
                        </p>
                    </div>
                </div>
            </div>
            <div class="row pb-5">
                @foreach (Expert expert in Model.Experts)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="item text-center">
                            <div class="img">
                                <img src="~/img/@expert.Image" class="img-fluid rounded-circle" alt="">
                            </div>
                            <div class="text mt-3">
                                <h6>@expert.Expertname</h6>
                                <p class="text-black-50">@expert.Work</p>
                            </div>
                        </div>
                    </div>
                }


                <div class="col-lg-3"></div>
                <div class="col-lg-3"></div>
                <div class="col-lg-3"></div>
            </div>
        </div>
    </section>

    <!-- EXPERTS END -->
    <!-- SUBSCRIBE START -->

    <section id="subscribe">
        <div class="container py-5">
            <div class="row py-5">
                <div class="col-12">
                    <div class="content text-center py-5">
                        <h3> @Model.Search.Title</h3>
                        <div class="form-group d-flex justify-content-center flex-wrap mt-5">
                            <input type="email" placeholder="Email Address" class="form-control-lg rounded-0">
                            <button class="btn btn-danger btn-lg rounded-0 px-5 mt-3 mt-sm-0">@Model.Search.ButtonName</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SUBSCRIBE END -->
    <!-- BLOG START -->

    <section id="blog">
        <div class="container">
            <div class="row py-5">
                <div class="offset-lg-3 col-lg-6">
                    <div class="section-title">
                            <h1> Bizim blogumuzdan  </h1>
                            <p class="text-black-50">
                                Cicekler rengberenglikleri ile heyatimiza reng qatir ve xatirelerin nisanesi olaraq qalirlar
                            </p>
                    </div>
                </div>
            </div>
            <div class="row pb-5">
                @foreach (Blog blog in Model.Blogs)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="item">
                            <div class="img position-relative">
                                <img src="~/img/@blog.Image" class="img-fluid" alt="">
                                <div class="date rounded bg-light position-absolute py-1 px-2">
                                    <span>29.12.2019</span>
                                </div>
                            </div>
                            <div class="text mt-3 text-center px-5">
                                <h5>@blog.ImageTitle</h5>
                                <p class="text-black-50">
                                   @blog.ImageDescription
                                </p>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </section>

    <!-- BLOG END -->
    <!-- SAY START -->

    <section id="say">
        <div class="container">
            <div class="row py-5 justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div class="owl-carousel say">


   @foreach (Minislide slide in Model.Minislides)
                        {<div>
    <div class="item text-center">
        <div class="img d-flex justify-content-center">
            <img src="~/img/@slide.Image" alt="">
        </div>
        <div class="text text-muted pt-3 pb-5">
            <i>
                @slide.Title
            </i>
        </div>
        <div class="author">
            <h6>@slide.Name</h6>
            <p class="text-black-50">@slide.Work</p>
        </div>
    </div>
</div>
       }       
                            <div>

                            </div>
                        </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SAY END -->
    <!-- INSTAGRAM START -->

    <section id="instagram">
        <div class="owl-carousel instagram">
            @foreach (Instagram instagram in Model.Instagrams)
            {
                <div><img src="~/img/@instagram.Image" class="img-fluid" alt=""></div>
            }


        </div>
        <div class="hastag bg-light text-muted py-2 px-3">
            #FIORELLO
        </div>
    </section>

    <!-- INSTAGRAM END -->

</main>

